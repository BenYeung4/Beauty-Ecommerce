<div class="w-auto border border-slate-800 m-8">
    <div class="bg-slate-800 text-white p-4">New Product Form</div>

    <form class="new-product-form" method="post" enctype="multipart/form-data">
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-name">Name:</label></div>
            <div class="w-full"><input type="text" id="product-name" class="border w-full p-1" value="" /></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-category">Category:</label></div>
            <div class="w-full"><select id="product-category" class="border w-full p-1">{{{categoryOptions}}}</select></div>
        </div>        
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-image">Image:</label></div>
            <div class="w-full"><input type="file" id="product-image" name="product-image" class="border w-full p-1" accept=".jpg,image/jpeg,.png,image/png,image/x-png" /></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-choice">Or select:</label></div>
            <div class="w-full"><select id="product-choice" name="product-choice" class="border w-full p-1">{{{imageOptions}}}</select></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-description">Description:</label></div>
            <div class="w-full"><textarea id="product-description" rows="4" class="border w-full p-1"></textarea></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-manufacturer">Manufacturer:</label></div>
            <div class="w-full"><input type="text" id="product-manufacturer" class="border w-full p-1" value="" /></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-stock">Stock:</label></div>
            <div class="w-full"><input type="text" id="product-stock" class="border w-full p-1" value="" /></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-price">Price:</label></div>
            <div class="w-full"><input type="text" id="product-price" class="border w-full p-1" value="" /></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="w-32"><label for="product-weight">Weight:</label></div>
            <div class="w-full"><input type="text" id="product-weight" class="border w-full p-1" value="" /></div>
        </div>
        <div class="flex flex-row p-4">
            <div class="justify-left grow"></div>
            <div class="justify-right">
                <button id="submit" class="bg-slate-900 hover:bg-slate-400 text-white px-3 py-2 rounded-md text-sm font-medium">Save</button>
            </div>
        </div>
    </form>
    </div>
</div>

<script src="/javascript/new-product.js"></script>